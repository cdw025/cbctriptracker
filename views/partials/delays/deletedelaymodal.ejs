<div class="modal fade" id="ddelay_id<%- delay.delay_id %>" tabindex="-1" role="dialog" aria-labelledby="deleteDelayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title w-100 text-center">Are you sure you want to delete this delay?  This cannot be undone.</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="deletedelayform">
            <div class="form-group">
              <label hidden for="ddelay_id"></label>
              <input hidden type="text" class="form-control ddelay_id" value="<%= delay.delay_id %>">
              <table class="table">
                <thead>
                  <tr class="d-flex">
                    <th class="col-sm-2">Delay Type</th>
                    <th class="col-sm-2">Start</th>
                    <th class="col-sm-2">Stop</th>
                    <th class="col-sm-2">Duration (hrs)</th>
                    <th class="col-sm-4">Comments</th>
                  </tr>
                </thead>
                <tbody>
                    <tr class="d-flex border" style="margin-top:5px;">
                    <td class="col-sm-2"><%- delay.delay_type %></th>
                    <td class="col-sm-2"><%- moment(delay.delay_start).format('M/D/YY @ kk:mm') %></td>
                    <td class="col-sm-2"><%- moment(delay.delay_stop).format('M/D/YY @ kk:mm') %></td>
                    <td class="col-sm-2"><%- delay.delay_duration %></td>
                    <td class="col-sm-4"><%- delay.description %></td>
                  </tr>
                </tbody>
              </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-danger">DELETE THIS DELAY</button>
        </div>
      </form>
      </div>
    </div>
  </div>