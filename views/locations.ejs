<header class="page header">
    <%- include ('partials/header') %>
 </header>

<main>
  <br>
  <div class="container-fluid company-container-div">
  <h3 style="text-align: center;">Locations</h3>
  <div class="container-fluid">
    <div class="row">
      <div class="col-9"></div>
      <div class="table-responsive">
        <table class="table table-hover table-sm" data-toggle="table" data-search="true" data-pagination="true" data-page-size="25">
          <thead>
            <tr>
              <th data-sortable="true" scope="col">Location Name</th>
              <th data-sortable="true" scope="col">Latitude</th>
              <th data-sortable="true" scope="col">Longitude</th>
              <th data-sortable="true" scope="col">River Name</th>
            </tr>
          </thead>
          <tbody>
            <% locations.forEach(function(location) { %>
                <tr>
                    <td><%= location.location_name %></td>
                    <td><%= location.latitude %></td>
                    <td><%= location.longitude %></td>
                    <td><%= location.river_name %></td>
                </tr>
                <% }); %>
          </tbody>
        </table>
        </div>
    </div>
    <br>
   </div>
   <div class="container-fluid">
    <br>
    </div>  
    </main>
